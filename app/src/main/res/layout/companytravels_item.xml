<?xml version="1.0" encoding="utf-8"?>
    <!--androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carView"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    cardView:cardCornerRadius="20dp"
    cardView:cardElevation="8dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/sendmailbtn"
            android:layout_width="130dp"
            android:layout_height="40dp"


            android:layout_marginEnd="240dp"
            android:layout_marginRight="240dp"


            android:backgroundTint="#E43870"
            android:text="שלח מייל"
            android:textSize="8sp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintRight_toRightOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"
            cardView:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/approvebtn"
            android:layout_width="129dp"
            android:layout_height="39dp"

            android:layout_marginEnd="244dp"
            android:layout_marginRight="244dp"
            android:layout_marginBottom="36dp"

            android:backgroundTint="#E43870"
            android:text="שלח הצעה"
            android:textSize="8sp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"
            cardView:layout_constraintVertical_bias="0.452"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/callbtn"
            android:layout_width="129dp"
            android:layout_height="41dp"

            android:layout_marginTop="12dp"
            android:layout_marginEnd="244dp"

            android:layout_marginRight="244dp"
            android:backgroundTint="#E43870"
            android:text="בצע שיחה"
            android:textSize="8sp"
            android:autoLink="phone"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"
            cardView:layout_constraintVertical_bias="0.658" />

        <CheckBox
            android:id="@+id/checkBoxSubmit"
            android:layout_width="113dp"
            android:layout_height="52dp"
            android:layout_marginEnd="260dp"
            android:layout_marginRight="260dp"
            android:checked="false"
            android:enabled="false"
            android:text="התקבל אישור לקוח"
            android:textSize="10dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"
            cardView:layout_constraintVertical_bias="0.016" />


        <TextView
            android:id="@+id/startaddress"
            android:layout_width="138dp"
            android:layout_height="28dp"
            android:layout_marginStart="240dp"
            android:layout_marginLeft="240dp"
            android:layout_marginRight="240dp"
            android:layout_marginBottom="96dp"
            android:gravity="left"
            android:text="start add"
            android:textSize="10dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintRight_toRightOf="parent"
            cardView:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/endaddress"
            android:layout_width="152dp"
            android:layout_height="28dp"
            android:layout_marginRight="188dp"
            android:layout_marginBottom="52dp"
            android:gravity="left"
            android:text="end add"
            android:textSize="10dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/numt"
            android:layout_width="98dp"
            android:layout_height="22dp"

            android:layout_marginRight="244dp"
            android:layout_marginBottom="16dp"
            android:text="num travels"
            android:textSize="10dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/custname"
            android:layout_width="87dp"
            android:layout_height="24dp"
            android:layout_marginRight="244dp"
            android:layout_marginBottom="128dp"
            android:gravity="left"
            android:text=" name"
            android:textSize="10dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>